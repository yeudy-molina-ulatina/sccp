<h1 class="content_title">Citas</h1>

<table class="list_resourses">
  <tr>
    <th>Fecha</th>
    <th>Hora</th>
    <th>Duración</th>
    <th>Lugar atención</th>
    <th>Motivo consulta</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @citas.each do |cita| %>
  <tr>
    <td><%= cita.fecha %></td>
    <td><%= cita.hora %></td>
    <td><%= cita.duracion %></td>
    <td><%= cita.lugar_atencion %></td>
    <td><%= cita.motivo_consulta.motivo_inicial %></td>
    <td><%= link_to 'Mostar', cita %></td>
    <td><%= link_to 'Editar', edit_cita_path(cita) %></td>
    <td><%= link_to 'Eliminar', cita, confirm: '¿Esta seguro?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'Cita nueva', new_cita_path, :method => :get  %>
