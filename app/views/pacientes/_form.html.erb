      <ul>
      <% @paciente.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div0>
  <img name="Foto del paciente" src="" width="232" height="200" alt="">
  </div0>
  <div1 >
  <div>
    <%= f.label "Nombre:" %> 
   <%= f.text_field :nombre %>
   <%= f.label "Apellido 1:" %> 
   <%= f.text_field :apellido1 %>
   <%= f.label "Apellido 2:" %> 
   <%= f.text_field :apellido2 %>
  </div>
      
  <div class="field">
  <%= f.label "Cédula:" %>
  <%= f.text_field :cedula %>
  </div>
  
  <div class="field">
    <%= f.label "Fecha de nacimiento:" %>
    <%= f.date_select :fecha_nacimiento %>
  </div>
  
  <div class="field">
    <%= f.label "Genero:" %>
	<%= select_tag "paciente[genero]", options_for_select(%w{ Masculino Femenino}), :prompt => "Seleccione" %>
 </div>
  
  <div class="field">
    <%= f.label "Nacionalidad:" %>
    <%= f.text_field :nacionalidad %>
  </div>
  
  <div class="field">
    <%= f.label "Estado Civil: " %>
    <%= select_tag "paciente[estado_civil]", options_for_select(%w{ Soltero/a  Casado/a Divorciado/a Viudo/a Union_Libre}), :prompt => "Seleccione" %>
  </div>
 </div1>   
 
<div2>  
  <div class="field">
    <%= f.label "Teléfono casa:" %>
    <%= f.text_field :telefono_casa %>
	<%= f.label "Teléfono celular:" %>
    <%= f.text_field :telefono_celular %>
	<%= f.label "Correo electrónico:" %>
    <%= f.text_field :correo_electronico %>
  </div>
</div2>

<div3>
  <div class="field">
    <%= f.label "Ocupación:" %>
    <%= f.text_field :ocupacion %>
	<%= f.label "Profesión:" %>
    <%= f.text_field :profesion %>
	<%= f.label "Años de estudio:" %>
    <%= f.number_field :anos_estudio %>
  </div>
</div3>

<div4>  
  <div class="field">
    <%= f.label "Provincia:" %>
    <%= select_tag "paciente[provincia]", options_for_select(%w{ Alajuela  Cartago Guanacaste Heredia Limón Puntarenas San_José}), :prompt => "Seleccione" %>
	<%= f.label "Cantón:" %>
    <%= f.text_field :canton %>
	<%= f.label "Distrito:" %>
    <%= f.text_field :distrito %>
  </div>
  
    
  <div class="field">
    <%= f.label "Otras señas:" %>
    <%= text_area_tag "paciente[otras_senas]", nil, :size => "155x5" %>
  </div>
</div4>
  
 
  <div class="actions">
    <%= f.submit %>
  </div>
 
<% end %>
